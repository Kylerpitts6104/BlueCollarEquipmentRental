// Simple interactivity: mobile nav toggle, year, and basic form guard
document.addEventListener('DOMContentLoaded', function() {
  const toggle = document.getElementById('nav-toggle');
  const nav = document.getElementById('nav');
  toggle.addEventListener('click', () => {
    nav.classList.toggle('open');
  });

  // Update copyright year
  document.getElementById('year').textContent = new Date().getFullYear();

  // Basic client-side form check
  const form = document.getElementById('contact-form');
  form.addEventListener('submit', function(e) {
    // minimal validation: ensure name and contact present
    const name = form.querySelector('[name="name"]').value.trim();
    const contact = form.querySelector('[name="contact"]').value.trim();
    if (!name || !contact) {
      e.preventDefault();
      alert('Please include your name and contact details.');
    } else {
      // allow submission â€” if using Formspree, it will post to their endpoint
    }
  });
